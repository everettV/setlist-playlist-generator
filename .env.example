# Concert Recap Environment Variables
# Copy this file to .env and fill in your actual values

# ================================
# DATABASE CONFIGURATION
# ================================
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/concert-recap?retryWrites=true&w=majority
DATABASE_NAME=concert-recap

# ================================
# SESSION & SECURITY
# ================================
SESSION_SECRET=your-super-secret-session-key-change-in-production
AFFILIATE_SECRET_KEY=your-affiliate-encryption-key-change-in-production
JWT_SECRET=your-jwt-secret-key-change-in-production

# ================================
# ANALYTICS & TRACKING
# ================================
# Google Analytics 4 Measurement ID
REACT_APP_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Tag Manager ID (optional)
REACT_APP_GTM_ID=GTM-XXXXXXX

# ================================
# AFFILIATE PROGRAM CREDENTIALS
# ================================
# Vivid Seats
VIVID_SEATS_AFFILIATE_ID=your-vivid-seats-affiliate-id
VIVID_SEATS_API_KEY=your-vivid-seats-api-key

# SeatGeek
SEATGEEK_CLIENT_ID=your-seatgeek-client-id
SEATGEEK_CLIENT_SECRET=your-seatgeek-client-secret

# Impact Network (for multiple affiliate programs)
IMPACT_ACCOUNT_SID=your-impact-account-sid
IMPACT_AUTH_TOKEN=your-impact-auth-token

# ================================
# EXTERNAL API KEYS
# ================================
# Setlist.fm API
SETLISTFM_API_KEY=your-setlistfm-api-key

# Spotify API
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret

# Apple Music API
APPLE_MUSIC_PRIVATE_KEY=your-apple-music-private-key
APPLE_MUSIC_KEY_ID=your-apple-music-key-id
APPLE_MUSIC_TEAM_ID=your-apple-music-team-id

# ================================
# DEPLOYMENT CONFIGURATION
# ================================
# Frontend URL (for CORS and security)
FRONTEND_URL=https://concert-recap.com
# For development: http://localhost:3000

# Backend URL
BACKEND_URL=https://api.concert-recap.com
# For development: http://localhost:5000

# Environment
NODE_ENV=production
# For development: development

# Port for backend server
PORT=5000

# ================================
# EMAIL & NOTIFICATIONS
# ================================
# SendGrid (for transactional emails)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@concert-recap.com

# ================================
# PRIVACY & COMPLIANCE
# ================================
# GDPR compliance
GDPR_ENABLED=true

# Cookie settings
COOKIE_DOMAIN=concert-recap.com
# For development: localhost

# Data retention period (in days)
DATA_RETENTION_DAYS=730

# ================================
# RATE LIMITING
# ================================
# Redis URL for rate limiting (optional, falls back to memory)
REDIS_URL=redis://localhost:6379

# Rate limit settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AFFILIATE_RATE_LIMIT_MAX=10

# ================================
# MONITORING & LOGGING
# ================================
# Sentry DSN for error tracking (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Log level
LOG_LEVEL=info
# Options: error, warn, info, debug

# ================================
# FEATURE FLAGS
# ================================
# Enable affiliate tracking
AFFILIATE_TRACKING_ENABLED=true

# Enable analytics
ANALYTICS_ENABLED=true

# Enable user accounts
USER_ACCOUNTS_ENABLED=false

# Enable social sharing
SOCIAL_SHARING_ENABLED=true

# ================================
# DEVELOPMENT ONLY
# ================================
# Debug mode (shows additional console logs)
DEBUG=false

# Mock affiliate responses (for testing)
MOCK_AFFILIATE_API=false

# Disable real affiliate redirects (for testing)
DISABLE_AFFILIATE_REDIRECTS=false